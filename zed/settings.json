{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "terminal": {
    "shell": {
      "program": "fish"
    },
    "font_family": "ZedMono Nerd Font"
  },
  "file_types": {
    "Helm": ["**/templates/**/*.yaml"]
  }
}
