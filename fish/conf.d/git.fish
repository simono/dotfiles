# Fish config for git abbrevations.
#
# Location: ~/.config/fish/conf.d/git.fish
#
# Simon Olofsson <simon@olofsson.de>
#

abbr g      'git'
abbr ga     'git add'
abbr gb     'git branch'
abbr gc     'git commit'
abbr gca    'git commit -a'
abbr gd     'git diff'
abbr gdc    'git diff --cached'
abbr gl     'git log'
abbr glg    'git log --graph --all'
abbr grs    'git restore --staged'
abbr gs     'git status'
abbr gsh    'git show'
abbr gst    'git stash'
abbr gsw    'git switch'
