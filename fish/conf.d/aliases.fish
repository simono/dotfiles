# coreutils
alias cp 'cp -iv'
alias df 'df -h'
alias du 'du -h'
alias mv 'mv -iv'
alias rm 'rm -Iv'

# eza
alias l 'eza --icons --group-directories-first'
alias ll 'l --long --git --header --smart-group --time-style=relative'
