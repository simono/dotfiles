# Zsh config for login shells.
#
# Location: ~/.zprofile
#
# Simon Olofsson <simon@olofsson.de>
#

# Set PATH
for p in '/usr/local/bin' "$HOME/bin"; do
	if [[ -d $p ]]; then
		PATH="$p:$PATH"
	fi
done

# Set fpath
for p in '/usr/local/share/zsh/site-functions' '/usr/local/share/zsh-completions'; do
	if [[ -d $p ]]; then
		fpath=($p $fpath)
	fi
done

export EDITOR='vim'
(( $+commands[vimpager] )) && export PAGER='vimpager'
export LSCOLORS='gxfxbEaEBxxEhEhBaDaCaD'

test -f "$HOME/.zprofile.local" && source "$HOME/.zprofile.local"
