# git configuration file.
#
# Location: ~/.gitconfig
#
# Simon Olofsson <simon@olofsson.de>
#

[alias]
	br = branch
	ci = commit
	dc = diff --cached
	df = diff
	st = status
	wdf = diff --color-words
[branch]
	autoSetupRebase = always
[commit]
	gpgsign = true
[core]
	pager = delta
[delta]
	# use n and N to move between diff sections
	navigate = true
	side-by-side = true
[diff]
	renames = copies
	colorMoved = default
[fetch]
	prune = true
[gpg]
	format = ssh
[help]
	autocorrect = prompt
[interactive]
	diffFilter = delta --color-only
[log]
	follow = true
[merge]
	conflictstyle = diff3
[push]
	autoSetupRemote = true
[user]
	email = simon@olofsson.de
	name = Simon Olofsson
	signingkey = ~/.ssh/id_ed25519.pub
[include]
	path = .gitconfig.local
