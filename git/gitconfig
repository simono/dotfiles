[alias]
	br = branch
	ci = commit
	co = checkout
	dc = diff --cached
	df = diff
	st = status
	wdf = diff --color-words
[user]
	name = Simon Olofsson
	email = simon@olofsson.de
	signingkey = ~/.ssh/id_ed25519.pub
[diff]
	renames = copies
[log]
	follow = true
	mailmap = true
[include]
	path = .gitconfig.local
[gpg]
	format = ssh
[commit]
	gpgsign = true
