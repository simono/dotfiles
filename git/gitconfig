# git configuration file.
#
# Location: ~/.gitconfig
#
# Simon Olofsson <simon@olofsson.de>
#

[alias]
	br = branch
	ci = commit
	dc = diff --cached
	df = diff
	st = status
	wdf = diff --color-words
[branch]
	autoSetupRebase = always
[commit]
	gpgsign = true
[diff]
	renames = copies
[fetch]
	prune = true
[gpg]
	format = ssh
[help]
	autocorrect = prompt
[include]
	path = .gitconfig.local
[log]
	follow = true
[push]
	autoSetupRemote = true
[user]
	email = simon@olofsson.de
	name = Simon Olofsson
	signingkey = ~/.ssh/id_ed25519.pub
