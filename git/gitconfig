# git configuration file.
#
# Location: ~/.gitconfig
#
# Simon Olofsson <simon@olofsson.de>
#

[advice]
	skippedCherryPicks = false
[alias]
	br = branch
	ci = commit
	dc = diff --cached
	df = diff
	logg = log --graph --all
	st = status
	unstage = restore --staged
[commit]
	gpgSign = true
[core]
	pager = delta
[delta]
	# use n and N to move between diff sections
	navigate = true
	side-by-side = true
[diff]
	renames = copies
	colorMoved = default
	algorithm = histogram
	wsErrorHighlight = all
[fetch]
	prune = true
[gpg]
	format = ssh
[help]
	autoCorrect = prompt
[interactive]
	diffFilter = delta --color-only
[log]
	follow = true
	abbrevCommit = true
	date = auto:relative
[merge]
	conflictStyle = zdiff3
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[rebase]
	autoSquash = true
	autoStash = true
[rerere]
	enabled = true
[status]
	showStash = true
[user]
	email = simon@olofsson.de
	name = Simon Olofsson
	signingKey = ~/.ssh/id_ed25519.pub
[include]
	path = .gitconfig.local
