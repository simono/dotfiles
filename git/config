# Location: ~/.config/git/config
#
# Simon Olofsson <simon@olofsson.de>
#

[advice]
	skippedCherryPicks = false
[branch]
	autoSetupRebase = always
[commit]
	gpgSign = true
	verbose = true
[core]
	pager = delta
[delta]
	hyperlinks = true
	# use n and N to move between diff sections
	navigate = true
	side-by-side = true
[diff]
	renames = copies
	colorMoved = default
	algorithm = histogram
	wsErrorHighlight = all
[fetch]
	prune = true
[gpg]
	format = ssh
[help]
	autoCorrect = prompt
[interactive]
	diffFilter = delta --color-only
[log]
	follow = true
	abbrevCommit = true
	date = auto:relative
[merge]
	conflictStyle = zdiff3
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[rebase]
	autoSquash = true
	autoStash = true
[rerere]
	enabled = true
[status]
	showStash = true
[include]
	path = config.local
	path = config.themes
